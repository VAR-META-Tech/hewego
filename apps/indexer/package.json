{
  "name": "indexer",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "build:prod": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "start:prod-api": "node dist/main",
    "start:prod-worker": "node dist/main",
    "seed:admin": "cross-env ENTITY=admin ts-node -r tsconfig-paths/register src/modules/seeders/seed.ts",
    "seed:all": "cross-env ENTITY=all ts-node -r tsconfig-paths/register src/modules/seeders/seed.ts",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
    "migration:run": "npm run build && npm run typeorm migration:run",
    "migration:create": "npm run typeorm migration:create -- -n InitDatabases",
    "migration-generate": "npm run typeorm:cli -- migration:generate -- -n InitDatabases",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest  --runInBand --forceExit --config ./test/jest-e2e.json",
    "compile-contract-types": "typechain --target ethers-v5 --out-dir ./src/smart-contract/types ./src/smart-contract/*.json"
  },
  "dependencies": {
    "@hashgraph/sdk": "2.25.0",
    "@meshsdk/core": "^1.5.1",
    "@nestjs-modules/mailer": "^1.8.1",
    "@nestjs/axios": "^2.0.0",
    "@nestjs/common": "^9.3.10",
    "@nestjs/config": "^2.3.1",
    "@nestjs/core": "^9.3.10",
    "@nestjs/jwt": "^10.0.2",
    "@nestjs/passport": "^9.0.3",
    "@nestjs/platform-express": "^9.3.10",
    "@nestjs/swagger": "^6.2.1",
    "@nestjs/typeorm": "^9.0.1",
    "@typechain/ethers-v5": "^10.2.1",
    "axios": "^1.4.0",
    "axios-cache-adapter": "^2.7.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cookie-parser": "^1.4.6",
    "deep-parse-json": "^1.0.2",
    "dotenv": "^16.3.1",
    "ethers": "^5.7.2",
    "handlebars": "^4.7.7",
    "lodash": "^4.17.21",
    "nestjs-typeorm-paginate": "^4.0.3",
    "node-cache": "^5.1.2",
    "node-cron": "^3.0.2",
    "pg": "^8.12.0",
    "redis": "^4.6.5",
    "rimraf": "4.4.1",
    "typechain": "^8.3.1",
    "typeorm": "^0.3.12",
    "uuid": "^9.0.0",
    "web3": "^1.8.2",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.2.0",
    "@nestjs/schematics": "^9.0.4",
    "@nestjs/testing": "^9.3.10",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.4.2",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.15.3",
    "@types/nodemailer": "^6.4.7",
    "@types/supertest": "^2.0.12",
    "cross-env": "^7.0.3",
    "jest": "^29.5.0",
    "prettier": "^2.8.4",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^4.9.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
